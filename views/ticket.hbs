<form action="bug" method="POST">
    <input type="hidden" name="appId" value="{{appId}}"/>
    <input type="hidden" name="appVersion" value="{{appVersion}}"/>

    <div class="form-group">
        <label for="email">$$label_email$$</label>
        <input type="email" name="email" placeholder="$$label_email_placeholder$$" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="title">$$label_title$$</label>
        <input type="text" name="title" placeholder="$$label_title_placeholder$$" class="form-control" required="required"/>
    </div>

    <div class="form-group">
        <label for="type">$$label_type$$</label>
        <select name="type" class="form-control">
            <option value="bug">$$label_type_bug$$</option>
            <option value="problem">$$label_type_problem$$</option>
            <option value="idea">$$label_type_idea$$</option>
            <option value="improvement">$$label_type_improvement$$</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">$$label_description$$ (min: 10/ max: 1000)</label>
        <textarea class="form-control" rows="15" name="description" minlength="10" maxlength="1000">{{template}}</textarea>
        <span class="markdown-notice">$$label_markdown_support$$</span>
    </div>
    <input class="btn btn-lg btn-warning" type="submit" value="$$label_send$$">
</form>
