<form action="login" method="POST">
    <div class="form-group">
        <label for="email">$$label_email$$</label>
        <input type="email" name="email" placeholder="$$label_email_placeholder$$" class="form-control" required="required"/>
    </div>

    <div class="form-group">
        <label for="password">$$label_password$$</label>
        <input type="password" name="password" placeholder="$$label_password_placeholder$$" class="form-control" required="required"/>
    </div>
    <input class="btn btn-lg btn-primary" type="submit" value="$$label_login$$">
</form>
