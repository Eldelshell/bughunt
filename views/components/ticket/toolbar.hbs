{{!--  {{> ticket/toolbar ticket}}  --}}

<div class="btn-group" role="group">
    {{#compare status "open"}}
        <button id="start-progress-button" class="btn btn-sm btn-info">
            <i class="fa fa-play"></i>$$label_start_progress$$
        </button>
        <button id="close-button" class="btn btn-sm btn-info">
            <i class="fa fa-close"></i>$$label_close$$
        </button>
    {{/compare}}
    {{#compare status "progress"}}
        <button id="reopen-button" class="btn btn-sm btn-info">
            <i class="fa fa-stop"></i>$$label_stop_progress$$
        </button>
        <button id="close-button" class="btn btn-sm btn-info">
            <i class="fa fa-close"></i>$$label_close$$
        </button>
    {{/compare}}
    {{#compare status "closed"}}
        <button id="reopen-button" class="btn btn-sm btn-info">
            <i class="fa fa-refresh"></i>$$label_open$$
        </button>
    {{/compare}}
    {{#if private}}
        <button id="private-button" class="btn btn-sm btn-info">
            <i class="fa fa-unlock"></i>$$label_public$$
        </button>
    {{else}}
        <button id="public-button" class="btn btn-sm btn-info">
            <i class="fa fa-lock"></i>$$label_private$$
        </button>
    {{/if}}
</div>
